<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shatwell_Justin_Final" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="loginEditText">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/light_cream</item>
    </style>
    <style name="loginButtons">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/blue</item>

    </style>
    <style name="deleteButtons">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@color/blue</item>
        <item name="android:text">@string/delete</item>
    </style>
    <style name="eventTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="eventDate">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="Theme.Shatwell_Justin_Final" parent="Base.Theme.Shatwell_Justin_Final" />
</resources>